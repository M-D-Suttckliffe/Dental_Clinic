<div class="row">
    <form class="row g-5 mar0">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 mar15">
            <label asp-for="Patientid" class="form-label block" ></label>
            <select asp-for="Patientid" class ="form-control inlinesel" asp-items="ViewBag.Patientid"></select>
            <button class="w-10 btn btn-primary btn-lg height20" asp-controller="Patients" asp-action="Create">+</button>
        </div>
        <div class="col-12 mar15">    
            <label asp-for="Doctorid" class="form-label block"></label>
            <select asp-for="Doctorid" class ="form-control inlinesel" asp-items="ViewBag.Doctorid"></select>
        </div>
        <hr>
        <div class="col-12 mar15">    
            <label asp-for="MedTreatment.Diagnosid" class="form-label block"></label>
            <select asp-for="MedTreatment.Diagnosid" class ="form-control inlinesel" asp-items="ViewBag.Diagnosid"></select>
            <button class="w-10 btn btn-primary btn-lg height20" asp-controller="MedTreatments" asp-action="Create">+</button>
        </div>
        <div class="col-12 mar15">    
            <label asp-for="MedTreatmentid" class="form-label block"></label>
            <select asp-for="MedTreatmentid" class ="form-control inlinesel" asp-items="ViewBag.MedTreatmentid"></select>
            <button class="w-10 btn btn-primary btn-lg height20" asp-controller="MedTreatments" asp-action="Create">+</button>
        </div>
        <hr>
        <div class="col-12 mar15">    
            <label asp-for="MedTreatment.listPrepforTreatments[0].Medicationid" class="form-label block"></label>
            @for(var i = 0; i < 5; i++)
            {
                <select asp-for="MedTreatment.listPrepforTreatments[i].Medicationid" class ="form-control inlinesel mar15" asp-items="ViewBag.Medicationid"></select>
                <button class="w-10 btn btn-primary btn-lg height20" asp-controller="Medications" asp-action="Create">+</button>
            }
            <button class="widtall btn btn-primary btn-lg" asp-controller="Medications" asp-action="Create">+</button>
        </div>
        <div class="col-12 mar15">    
            <label asp-for="servicesProvideds[0].MedServiceid" class="form-label block"></label>
            @for (var i = 0; i < 5; i++)
            {
                    <select asp-for="servicesProvideds[i].MedServiceid" class ="form-control inlinesel mar15" asp-items="ViewBag.MedServiceid"></select>
                    <button class="w-10 btn btn-primary btn-lg height20" asp-controller="ServicesProvideds" asp-action="Create">+</button>
            }
            <button class="widtall btn btn-primary btn-lg" asp-controller="ServicesProvideds" asp-action="Create">+</button>
        </div>
    </form>
</div>


